{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug com TSX",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect", "-r", "tsx"],
      "args": ["src/server.ts"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "console": "integratedTerminal"
    }
  ]
}